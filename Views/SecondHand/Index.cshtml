@model IEnumerable<CarRepair.Models.Car>
@inject LanguageService language

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">@language.Getkey("header")</h1>
            <p class="lead fw-normal text-white-50 mb-0">The Power of Dreams</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="images/hrv.png" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Brand</h5>
                                <h7 class="fw-bolder">@item.ModelName</h7>
                                <br>
                                <!-- Product price-->
                                @*<span class="text-muted text-decoration-line-through">@item.Price₺</span>*@
                                <h8>@item.Price₺</h8>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>